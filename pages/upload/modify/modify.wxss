.goods-info-mod{
  margin-top: 40rpx;
  border: solid 1rpx #ccc;
} 

/*输入模块的view  */
.goods-info-mod view{
  border-bottom: solid 1rpx #ccc;
  display: flex;  /* 加上这句后，全部输入模块都变成弹性布局 方便！ */
  height: 100rpx;
  line-height: 100rpx;
}

/*输入模块中的input  */
.goods-info-mod input{
  font-size: 34rpx;
  color: #666;
  padding-left: 20rpx;
  /* 让input标签垂直居中显示,让input跟父容器一样大 */
  height:100rpx;  
  width: 100%;
  background-color: white
 
}

/*输入模块中的所有text */
.goods-info-mod text{
  font-size: 34rpx;
  color: #666;
  padding-left: 20rpx;
}

/*简介  */
.goods-brief-con{
  font-size:14px;
  padding:20rpx 0 0 20rpx;
  color: #666;
  height: 200rpx;
  width: 97%;
  background-color: white
}

