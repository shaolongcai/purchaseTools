@import "/components/wux.wxss";
@import "/pages/template/client-tem/client-tem.wxss";



page{
  background-color: #f2f2f2;
  width: 750rpx;
}

.operate{
  position: fixed;
  bottom: 30rpx;
  left: 600rpx;
  display: flex;
  flex-direction: column;
  width: 100%; 
}


/* 客户卡片样式 */
.share_client{
  height: 100rpx;
  width: 200rpx;
  margin: 0;
  padding: 0
}
.share_img{
  width: 100rpx;
  height: 100rpx;
  float: left
}
/* 按键边框样式 */
button[plain]{ border:0;} 

.upload_img{
  height: 100rpx;
  width: 100rpx;
}


.operate_model{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}


.share_button{
  width: 700rpx;
  position: fixed;
  z-index: 4000;
  top: 20rpx;
  left:25rpx;
  background-color: #4AA8FE;
  color: white 
}

.ware_con{
  align-items: center;
  margin-top: 130rpx;
}

.client_tem{
  margin-right:0 ;
  position: absolute;
  height: 200rpx;
  width: 750rpx;
}

.entry{
  margin-top: 10rpx;
}

 .delete{
  width: 200rpx;
  text-align: center;
  background: red;
  color: white;
  margin-left: 750rpx;
  position: relative
} 

.more_text{
  display: block;
  /* 清除浮动影响,前提是块状元素 */
  clear:both;
  margin-left: 275rpx;
  font-size: 32rpx; 
  position: relative;
  top:40rpx;
}

.client_first{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
}

/* 空时的按键样式 */
.first_text{
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.first_button{
  background-color: #4AA8FE; 
  color: white;
  width: 400rpx;
  margin-top: 10rpx;
}


.or{
  font-size:38rpx;
  margin: 70rpx 0;
}

.upload_choose{
  border: solid 2rpx #4AA8FE;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  margin-left: 75rpx;
  padding: 30rpx 0;
  width: 600rpx;
  background-color: white;
  position: absolute;
  z-index: 1001;
}

.mask{
  background-color: black; 
  width: 100%;
  height: 100%;
  opacity: 0.6;
  position: absolute;
  z-index: 1000
}

/* 搜索栏样式 */
.search_value{
  background-color: #f2f2f2;
  border: 1px solid #ccc;
  width: 600rpx;
  height: 50rpx;
}